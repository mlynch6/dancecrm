<%= form_for @user, url: sessions_path, html: {class: 'form-signin'} do |f| %>
  <h1 class="form-signin-heading">Sign In</h1>
  <%= render 'layouts/shared/error_messages', object: @user %>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.text_field :email, class: 'form-control',
          placeholder: 'Email', autofocus: 'on' %>
  
  <%= f.label :password, class: 'sr-only' %>
  <%= f.password_field :password, class: 'form-control',
          placeholder: 'Password' %>
  
  <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
