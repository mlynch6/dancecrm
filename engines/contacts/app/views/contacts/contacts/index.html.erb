<h1>Contact Search</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Type</th>
        <th>Email</th>
        <th class="col-actions">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.birth_date_mdY %></td>
        <td><%= contact.contact_type %></td>
        <td><%= contact.email %></td>
        <td>
          <%= icon_link_to 'pencil', nil, contacts.edit_contact_path(contact), 
                title: 'Edit', id: "edit_#{contact.id}", class: 'btn btn-info btn-xs' %>
          <%= icon_link_to 'remove', nil, contacts.contact_path(contact), method: :delete,
                title: 'Delete', id: "delete_#{contact.id}", class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @contacts %>